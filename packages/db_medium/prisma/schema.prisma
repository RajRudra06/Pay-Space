generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_MEDIUM")
}

model SanctionsList{
  id              Int               @id @default(autoincrement())

  fullName        String  @map("fullname")
  DOB             DateTime? @map("dob")
  nationalCountry String    @map("nationalcountry")
  sanctionCountry String    @map("sanctioncountry")
  sanctionReason  String     @map("sanctionreason")
  sourceList      SourcesList @map("sourcelist")
}

enum SourcesList {
  OFAC
  EU
  UN
  DFAT
  HM_TREASURY
  CANADA_SANCTIONS
  MOFA_JAPAN
}

model ApplicationRequests{
    id                Int               @id @default(autoincrement())
    requestID         String
    customerRef       String  
    accountReference  String
    bankName          Bank_name   @default(notdefined)
    status            DebitCardStatus
    reasonToReject    String  @default("none") 
    fullName          String
    DOB               DateTime
    Country           String
    State             String
    City              String
    addressLine1      String
    postalCode        String
    BIN               String
    virtualCard       Boolean
    deliveryTime      DateTime
    dailyPOSLimit     POSLimit        @default(POS_60000)
    dailyATMLimit     DailyATMLimit   @default(ATM_30000)
}

model IssuedCards{
      processorCardId                Int               @id @default(autoincrement())
      requestID         String
      customerRef       String  
      accountReference  String
      bankName          Bank_name   @default(notdefined)
      encryptedPAN      String
      encryptedCVV      String
      encryptedPIN      String
      keyReference      String
      BINNumber         String
      last4PAN          String
      expiryMonth       ExpiryMonth
      expiryYear        Int
      cardType          CardType
      cardNetwork       CardNetwork
      productCode       String
      cardStatus        DebitCardStatus
      networkApprovalCode String
      dailyPOSLimit     POSLimit        @default(POS_60000)
      dailyATMLimit     DailyATMLimit   @default(ATM_30000)
      created_at        DateTime  @default(now())
}

enum CardNetwork{
  Visa
  MasterCard
  RuPay
}
enum DebitCardStatus{
  UnderProcess
  Issued
  Activated
  Deactivated
  Blocked
  Suspended
  Closed
  Expired
  Rejected
}

enum CardType{
  Physical 
  Virtual
}

enum ExpiryMonth {
  January
  February
  March
  April
  May
  June
  July
  August
  September
  October
  November
  December
}

enum Bank_name {
  icici
  sbi
  hdfc
  ubi
  notdefined
}

enum POSLimit {
  POS_60000  @map("60000")
  POS_250000 @map("250000")
  POS_400000 @map("400000")
}

enum DailyATMLimit {
  ATM_30000  @map("30000")
  ATM_60000  @map("60000")
  ATM_100000 @map("100000")
}

model BIN_NUMBERS {
  id              Int               @id @default(autoincrement())
  network      Network
  productType  ProductType
  Tier         Tier
  BIN          String
  BIN_Length   Int
  Country      Country
  Currency     Currency
  nextAccount     BigInt   @default(0) 
  allocatedCount  BigInt      @default(0)
}

enum Network {
  MasterCard
  Visa
  RuPay
}

enum ProductType{
  Debit
  Credit 
  Prepaid
}

enum Tier{
  Classic
  Gold 
  Platinum
}

enum Country {
  IN   
  USA  
  CAN 
  DE   
  CN   
  JP   
  GB   
  FR   
  IT  
  AU  
}

enum Currency {
  INR
  USD
  CAD
  EUR_DE
  CNY
  JPY
  GBP
  EUR_FR
  EUR_IT
  AUD
}
